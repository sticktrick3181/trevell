extends base
block content 
    main.main 
        .card-container 
            .card
                .card__header
                    .card__picture
                        .card__picture-overlay &nbsp;
                        img.card__picture-img(src='img/tour-4-cover.jpg' alt='Tour 1')
                    h3.heading-tertirary
                        span The City Wanderer
                .card__details
                    h4.card__sub-heading Easy 7-day tour
                    p.card__text
                        | Living the life of Wanderlust in the US&apos; most beatiful cities
                    .card__data
                        svg.card__icon
                            use(xlink:href='img/icons.svg#icon-map-pin')
                        span NYC, USA
                    .card__data
                        svg.card__icon
                            use(xlink:href='img/icons.svg#icon-calendar')
                        span March 2021
                    .card__data
                        svg.card__icon
                            use(xlink:href='img/icons.svg#icon-flag')
                        span 3 stops
                    .card__data
                        svg.card__icon
                            use(xlink:href='img/icons.svg#icon-user')
                        span 20 people
                .card__footer
                    p
                        span.card__footer-value $997
                        span.card__footer-text per person
                    p.card__ratings
                        span.card__footer-value 4.8
                        span.card__footer-text rating (31)
                    a.btn.btn--green.btn--small(href='#') Details
