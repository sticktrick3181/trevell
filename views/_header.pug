header.header 
    nav.nav.nav--tours 
        a.nav__el(href='/') All Trips
    div.header__logo
        img(src="/favicon_io/android-chrome-192x192.png", alt="trevell logo")
    nav.nav.nav--user
        if user
            button.nav__el.nav__el--logout Log out
            a.nav__el( href="/user/me")
                img.nav__user-img(src=`/img/users1/${user.photo}`, alt="User photo")
                span=user.firstName
        else 
            a.nav__el(href  = '/user/login') Log In
            a.nav__el.nav__el--cta(href  = '/user/signup') Sign Up



     
