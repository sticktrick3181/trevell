
extend base
block content 
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Log into your account
            form.form.form--login(autocomplete='off')
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input__login(type='email', placeholder='you@example.com',    required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input__login(type='password',placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Login